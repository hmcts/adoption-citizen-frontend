{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% from "../macros/page-heading/page-heading.njk" import pageHeading %}
{% from "../macros/alert/alert.njk" import alert %}
{% from "../macros/task-list/task-list.njk" import taskList %}
{% from "../macros/task-list/sub-task-list.njk" import subTaskList %}

{% extends "govuk/template.njk" %}

{% block pageTitle %}
    HMCTS - {{ pageName }}
{% endblock %}

{% block beforeContent %}

  {{ govukPhaseBanner({
    tag: {
      text: t('common:phaseBanner.phase')
    },
    html: t('common:phaseBanner.content')
  }) }}

{% endblock %}

{% block header %}

  {{ govukHeader({
    serviceName: t('common:serviceName'),
    navigation: [
      {
        text: t('common:links.profile'),
        href: "#"
      },
      {
        text: t('common:links.signOut'),
        href: "#"
      }
    ]
  }) }}

{% endblock %}

{% block head %} <link href="/main.css" rel="stylesheet"> {% endblock %}

{% block bodyEnd %} <script src="/main.js"></script> {% endblock %}
