{
  "compilerOptions": {
    "outDir": "./dist/",
    "alwaysStrict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es2019"
    ],
    "baseUrl": "src",
    "paths": {
      "case/*": [
        "main/app/case/*"
      ],
      "common/*": [
        "main/app/common/*"
      ],
      "idam/*": [
        "main/app/idam/*"
      ],
      "logging/*": [
        "main/app/logging/*"
      ],
      "router/*": [
        "main/router/*"
      ],
      "routes/*": [
        "main/routes/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  }
}
